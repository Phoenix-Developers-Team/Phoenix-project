<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>
    
    <nav class="navbar">
        
    </nav>
    <br><br>

    <section class="container-fluid bg-grey-X py-5">
        <div class="container">
            <div class="row">
               <div class="col-md-6">
                  <div class="row">
                     <div class="col-md-6">
                        <div data-aos="fade-up" class="logo-part-X">
                           <img data-aos="fade-right" class="img-mov" src="<%= movie.image_url %>" class="w-50 logo-Mov" >
                        </div>
                    </div>
                    <div class="col-md-6 px-4">
                       <h6 data-aos="fade-left"><%=movie.title %></h6>
                       <p data-aos="fade-left"><%=movie.overview%></p>
                       <div data-aos="fade-up-left">
                       <a href="#" class="btn-Mov"> More Info </a><br>
                       <a href="#" class="btn-Mov"> Contact Us</a>
                   </div>
                    </div>
                 </div>
              </div>
                    <div data-aos="fade-up-left" class="col-md-6 ">
                       <h6><%=movie.released_on%></h6>
                       <div class="social">
                          <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a>
                          <a href="#"><i class="fa fa-instagram" aria-hidden="true"></i></a>
                       </div>
                       <p><%=movie.description%></p>
                    </div>
                 </div>
              </div>
           </div>
        </div>
      </section>

    <main>
        <section>
    <form action="<%= `/update/${movie.id}?_method=PUT`%>" method="POST">
        <input type="text" name="title" value="<%= movie.title%>">
        <input type="text" name="image_url" value="<%= movie.image_url%>">
        <input type="text" name="overview" value="<%= movie.overview%>">
        <input type="text" name="released_on" value="<%= movie.released_on%>">
        <textarea name="description" cols="30" rows="10"> <%= movie.description %></textarea>
        <button type="submit"> Save Details </button>
    </form>
    </section>
</main>
<br>
<footer class="container-fluid bg-grey py-5">
        <%- include('../partials/footer') %>
</footer>
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>
      AOS.init();
    </script>
      <script src="/js/app.js"></script>
    </body>
    </html>