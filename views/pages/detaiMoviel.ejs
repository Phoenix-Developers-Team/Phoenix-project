<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>
    
    <nav class="navbar">
        
    </nav>
    <br><br>
<!-- ////////////////////////// -->


<body>
    <br>
    <br><br>
    <div class="content-container img-container" >
    </div>
      <section class="container-fluid bg-grey-X py-5">
          <div class="container">
              <div class="row">
                  <div class="col-md-6">
                      <div class="row">
                          <div class="col-md-6">
                              <div data-aos="fade-up" class="logo-part-X">
                                <img data-aos="fade-right" class="img-mov" src="<%= movie.image_url %>" class="w-50 logo-Mov" >
                              </div>
                          </div>
                          <div class="col-md-6 px-4">
                            <h6 data-aos="fade-left"><%=movie.title %></h6>
                              
                              <div data-aos="fade-up-left">
                                  <a href="#" id="upsearchMovie" class="btn-Mov"> Update Info </a><br>
                                  <a href="/movie" class="btn-Mov"> Back</a>
                              </div>
                          </div>
                          <div data-aos="fade-up-left" class="col-md-6 ">
                            <h6>Released : <%=movie.released_on%></h6>
                           
                            <p></p>
                         </div>
                      </div>
                  </div>
                  <div data-aos="fade-up-left" class="col-md-6 ">
                      <section>
                          <form style="display: none;" id="1movieForm" action="<%= `/update/${movie.id}?_method=PUT`%>" method="POST">
                              <div class="form-group">
                                  <label for="title">Title:</label>
                                  <input type="text" class="form-control" name="title" value="<%= movie.title%>" placeholder="title">
                              </div>
                              <div class="form-group">
                                  <label for="Image">Image Url:</label>
                                  <input type="text" class="form-control" name="image_url" value="<%= movie.image_url%>" placeholder="image url">
                              </div>
                                <div class="form-group">
                                  <label for="Overview">Overview:</label>
                                  <textarea name="Overview" value="<%= movie.overview%>" class="form-control" rows="5"> <%=movie.overview%> </textarea>
                                </div>
                              <div class="form-group">
                                  <label for="description">description:</label>
                                  <input name="description" value="<%= movie.description%>" class="form-control" rows="5">
                                </div>
                                <div class="form-group">
                                    <label for="released_on">released_on:</label>
                                    <input name="released_on" value="<%= movie.released_on%>" class="form-control" rows="5">
                                  </div>
                              
                              <button id="upsearchBook" class="btn btn-warning" type="submit"> Update Details </button>
                          </form>
  
                      </section>
                      <p id="1bookForm" data-aos="fade-left"><%=movie.overview%></p>
                  </div>
              </div>
          </div>
          </div>
          </div>
      </section>
      <script>
        $('#upsearchMovie').on('click', () => {
            $('#1bookForm').hide()
            $('#1movieForm').show()

        })

        $('#upsearchBook').on('click', () => {
            $('#1movieForm').hide()
            $('#1bookForm').show()

        })
    </script>

<!-- ///////////////////////// -->
<br>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>
      AOS.init();
    </script>
      <script src="/js/app.js"></script>
    </body>
    </html>