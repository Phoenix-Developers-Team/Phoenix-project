<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
</head>

<body>
  <br>
  <br>
  <br><br><br>
    <section class="container-fluid bg-grey-X py-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <div data-aos="fade-up" class="logo-part-X">
                                <img data-aos="fade-right" class="img-mov" src="<%= book.image_url %>"
                                    class="w-50 logo-Mov">
                            </div>
                        </div>
                        <div class="col-md-6 px-4">
                            <h6 data-aos="fade-left"><%=book.title %></h6>
                            <p data-aos="fade-left"><%=book.author%></p>
                            <div data-aos="fade-up-left">
                                <a href="#" id="upsearchMovie" class="btn-Mov"> Update Info </a><br>
                                <a href="/book" class="btn-Mov"> Back</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div data-aos="fade-up-left" class="col-md-6 ">
                    <h6><%=book.isbn%></h6>
                    <section>
                        <form style="display: none;" id="1movieForm" action="<%= `/updatebook/${book.id}?_method=PUT`%>"
                            method="POST">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" name="title" value="<%= book.title %>" placeholder="title">
                            </div>
                            <div class="form-group">
                                <label for="Image">Image Url</label>
                                <input type="text" class="form-control" name="image_url" value="<%= book.image_url %>" placeholder="image url">
                            </div>
                            <div class="form-group">
                                <label for="author">Author:</label>
                                <input name="author" value="<%= book.author %>" class="form-control" rows="5" id="comment">
                              </div>
                            <div class="form-group">
                                <label for="description">Description:</label>
                                <textarea name="description" class="form-control" rows="4" id="comment"> <%= book.description %> </textarea>
                              </div>
                            <button id="upsearchBook" class="btn btn-warning" type="submit"> Update Details </button>
                        </form>


                    </section>
                    <p id="1bookForm"><%=book.description%></p>
                    <p><%=book.bookshelf%></p>
                </div>
            </div>
        </div>
        </div>
        </div>
    </section>
    <script>
        $('#upsearchMovie').on('click', () => {
            $('#1bookForm').hide()
            $('#1movieForm').show()

        })

        $('#upsearchBook').on('click', () => {
            $('#1movieForm').hide()
            $('#1bookForm').show()

        })
    </script>

    
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>
        AOS.init();
    </script>
    <script src="/js/app.js"></script>
</body>

</html>