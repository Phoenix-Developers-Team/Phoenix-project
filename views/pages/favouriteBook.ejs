<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <header class="headerX">
    <div class="rowHead">
      <div class="contentX">
        <div><img id="img" src="img\video-file-2-512.png"></div>

        <a class="logo" href="/">HOME</a>

        <div class="mobile-toggle">
          <span></span>
          <span></span>
          <span></span>
        </div>

        <nav>
          <ul>
            <li><a href="/">Box-Office</a></li>
            <li><a href="/">Trending</a></li>
            <li><a href="/">History</a></li>
            <li><a href="/search">Search</a></li>
            <li><a href="/favorit">My-Fav</a></li>
          </ul>
        </nav>
      </div>
    </div>
  </header>
  <nav class="navbar">

  </nav>
  <br>
  <br>
  <br>
  <section class="container-fluid bg-grey-X py-5">
    <%let conuter=0%>
    <% booksList.forEach(book => { %>
    <%++conuter%>
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="row">
            <div class="col-md-6">
              <div data-aos="fade-up" class="logo-part-X">
                <img data-aos="fade-right" class="img-mov" src=<%= book.image_url%> class="w-50 logo-Mov">
              </div>
            </div>
            <div class="col-md-6 px-4">
              <h6 id="h6" data-aos="fade-left"><%=book.title %></h6>
              <form action="/books/<%= book.id%>" method="GET">
                <button class="btn-Mov-X" type="submit">View Details</button>
              </form>

              <form action="<%=`/deletebook/${book.id}?_method=DELETE`%>" method="POST">

                <button class="btn-Mov-X" type="submit"> DELETE </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <div data-aos="fade-up-left" class="col-md-6 ">

      </div>
      <br>
      <hr data-aos="fade-right" width="70%" color="gray"><br>
    </div>
    </div>
    <% }) %>
    <h2>Number of Books = <%=conuter%></h2>
  </section>
  <section>




  </section>
  <footer class="container-fluid bg-grey py-5">
    <%- include('../partials/footer') %>
  </footer>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
  <script>
    AOS.init();
  </script>
  <script src="/js/app.js"></script>
</body>

</html>