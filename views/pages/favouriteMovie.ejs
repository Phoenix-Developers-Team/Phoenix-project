<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <header class="headerX">
        <div class="rowHead">
            <div class="contentX"> 
              <div><img id="img" src="img\video-file-2-512.png"></div>
        
              <a class="logo" href="/">HOME</a>
        
              <div class="mobile-toggle">
                  <span></span>
                  <span></span>
                  <span></span>
              </div>
        
              <nav>
                  <ul>
                      <li><a href="#sec01">Trending</a></li>
                      <li><a href="#sec02">Box-Office</a></li>
                      <li><a href="#sec03">History</a></li>
                      <li><a href="/search">Search</a></li>
                      <li><a href="/favorit">My-Fav</a></li>
                  </ul>
              </nav>
            </div>
          </div>
    </header>
    <nav class="navbar">
        
    </nav>

    <section class="container-fluid bg-grey-fav py-5">
        <%let conut=0%>
            <% moviesList.forEach(movie => { %>
                <%++conut%>
        <div class="container">
            <div class="row">
               <div class="col-md-6">
                  <div class="row">
                     <div class="col-md-6-fav">
                        <div data-aos="fade-up" class="logo-part-fav">
                           <img data-aos="fade-right" class="img-mov-fav" src="<%= movie.image_url %>" > 
                        </div>
                    </div>
                    <div class="col-md-6 px-4">
                       <h6 data-aos="fade-left"></h6>
                       <div data-aos="fade-up-left">
                       
                   </div>
                    </div>
                 </div>
              </div>
              <div data-aos="fade-up-left" class="name-fav">
                    <div data-aos="fade-up-left" class="col-md-6-fav">
                       <h1> <%=movie.title %></h1>
                       <form action="/movies/<%= movie.id%>" method="GET">
                        <button class="btn-Mov-X" type="submit">View Details</button>
                    </form>
                    <form action="<%=`/delete/${movie.id}?_method=DELETE`%>" method="POST">
                        <button class="btn-Mov-X" type="submit"> DELETE </button>
                    </form><br></div>
                    </div>
                 </div>
              </div>
              <br><hr data-aos="fade-right" width="70%" color="gray"><br>
           </div>
        </div>
        <% }) %>
        <h2>Number of Movies = <%=conut%></h2>
      </section>

    <footer class="container-fluid bg-grey py-5">
        <%- include('../partials/footer') %>
    </footer>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>
      AOS.init();
    </script>
      <script src="/js/app.js"></script>
    </body>
    </html>