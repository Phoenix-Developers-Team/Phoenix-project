<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
</head>
<body>
    <header class="headerX">
        <div class="rowHead">
            <div class="contentX"> 
              <div><img id="img" src="img\video-file-2-512.png"></div>
        
              <a class="logo" href="/">HOME</a>
        
              <div class="mobile-toggle">
                  <span></span>
                  <span></span>
                  <span></span>
              </div>
        
              <nav>
                  <ul>
                      <li><a href="#sec01">Trending</a></li>
                      <li><a href="#sec02">Box-Office</a></li>
                      <li><a href="#sec03">History</a></li>
                      <li><a href="/search">Search</a></li>
                      <li><a href="/favorit">My-Fav</a></li>
                  </ul>
              </nav>
            </div>
          </div>
    </header>
    <div class="image-container6">
        <a href="#" class="text-X">Movies Search Result</a>
      </div>
    <br><br>
    <main>
           
    <section class="container-fluid bg-grey-X py-5">
        <% movies.forEach(movie => { %>
        <div class="container">
            <div class="row">
               <div class="col-md-6">
                  <div class="row">
                     <div class="col-md-6">
                        <div data-aos="fade-up" class="logo-part-X">
                           <img data-aos="fade-right" class="img-mov" src="<%= movie.image_url %>" class="w-50 logo-Mov" >
                        </div>
                    </div>
                    <div class="col-md-6 px-4">
                       <h6 data-aos="fade-left"><%=movie.title %></h6>
                       <p data-aos="fade-left"> <%=movie.released_on%></p>
                       <div data-aos="fade-up-left" class="btn-Mov-X1">
                        <form action="/add" method="post">
                          <input type="hidden" name="mainTitle" value="<%=mainTitle %>">
                    <input type="hidden" name="image_url" value="<%= movie.image_url%>">
                    <input type="hidden" name="title" value="<%= movie.title%>">
                    <input type="hidden" name="overview" value="<%= movie.overview%>">
                    <input type="hidden" name="description" value="<%= movie.description%>">
                    <input type="hidden" name="released_on" value="<%= movie.released_on%>">
                            <button class="btn-Mov-X" type="submit">Select this Movie</button>
                        </form><br>
                        <form action="/searchIfBook" method="post">
                            <input type="hidden" name="title" value="<%= movie.title%>">
                            <button class="btn-Mov-X" type="submit">Searh If It has A book</button>
                        </form>
                   </div>
                    </div>
                 </div>
              </div>
                    <div data-aos="fade-up-left" class="col-md-6 ">
                       <h6><%=movie.overview%></h6>
                       <div class="social">
                          
                    </div>
                       <p><%=movie.description%></p>
                    </div>
                 </div>
              </div>
              <br><hr data-aos="fade-right" width="70%" color="gray"><br>
           </div>
        </div>
        <% }) %>
      </section>
        </main>
<br><br><br>
    <footer class="container-fluid bg-grey py-5">
        <%- include('../partials/footer') %>
    </footer>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script>
      AOS.init();
    </script>
      <script src="/js/app.js"></script>
    </body>
    </html>
